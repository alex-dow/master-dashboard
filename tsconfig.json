{
    "compilerOptions": {
      "module": "es6",
      "moduleResolution": "node",
      "target": "es2015",
      "sourceMap": true,
      "baseUrl": "./packages",
      "paths": {
          "@retro-dashboard/segment-number": ["segment-number/src"],
          "@retro-dashboard/segment-clock": ["segment-clock/src"],
          "@retro-dashboard/server": ["server/src"],
          "@retro-dashboard/webapp": ["webapp/src"],
          "@retro-dashboard/*": ["*/src"],
      }
    },

    "exclude": [
       "node_modules",
        "dist"
    ]
}
