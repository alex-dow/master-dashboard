{
    "compilerOptions": {
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "experimentalDecorators": true,
        "target": "ES2018",
        "importHelpers": true,
        "paths": {
          "@/*": ["src/*"]
        },
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
